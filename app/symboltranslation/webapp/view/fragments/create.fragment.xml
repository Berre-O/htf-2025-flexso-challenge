<core:FragmentDefinition xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <!-- HACK THE FUTURE Challenge: several properties are missing to make this a succesful save-->
    <Dialog id="_IDGenDialog" title="Add new symbol" draggable="true">
        <content>
            <VBox class="sapUiSmallMargin" id="formContainer">
                <f:SimpleForm id="SimpleFormChangeColumn_twoGroups234" editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
                    <f:content>
                        <Label id="_IDGenLabel2" text="Icon" />
                        <Input id="_IDGenInput1" required="true" value="{create>/symbol}" />
                        <Label id="_IDGenLabel3" text="Where abouts" />
                        <Select id="_IDGenSelectWhereAbouts" required="true" selectedKey="{create>/whereFound}" items="{/SubnauticLocation}">
                            <core:Item key="{name}" text="{name}" />
                        </Select>
                        <Label text="Language" />
                        <Select id="_IDGenSelectLanguage"
                                required="true"
                                selectedKey="{create>/language}"
                                items="{/Languages}">
                            <core:Item key="{language}" text="{language}" />
                        </Select>

                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <footer>
            <Toolbar id="_IDGenToolbar">
                <content>
                    <ToolbarSpacer id="_IDGenToolbarSpacer4" />
                    <Button id="_IDGenButton4" text="Reject" type="Reject" press="closeDialog" ariaHasPopup="Dialog" />
                    <Button id="_IDGenButton5" text="Accept" type="Accept" press="submitForm" ariaHasPopup="Dialog" />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
